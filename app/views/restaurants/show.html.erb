<table class="table">
  <thead>
  <tr>
    <th scope="col">Food name</th>
    <th scope="col">Description</th>
    <th scope="col">Price</th>
    <th scope="col">Rating</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.food_name %></td>
      <td><%= food.description %></td>
      <td><%= food.price %></td>
      <td><%= food.rating %></td>
    </tr>
  <% end %>
  </tbody>
</table>